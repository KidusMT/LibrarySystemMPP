<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16"
            fx:controller="views.librarian.updateCheckoutEntry.UpdateCheckoutEntry">

    <children>
        <VBox prefHeight="598.0" prefWidth="767.0" spacing="12.0" styleClass="card-background"
              stylesheets="@../../../common/styles/common.css" AnchorPane.bottomAnchor="30.0"
              AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label alignment="CENTER" prefHeight="50.0" prefWidth="510.0" text="Create Entries">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <Label text="First name" textFill="#7b7b7b"/>
                <TextField fx:id="firstName" promptText="First name"/>
                <Label text="Last name" textFill="#7b7b7b"/>
                <TextField fx:id="lastName" promptText="Last name"/>
                <Label text="Book" textFill="#7b7b7b"/>
                <ComboBox fx:id="bookList" prefHeight="25.0" prefWidth="497.0"
                          promptText="-- SELECT BOOK TO BORROW --"/>
                <Label alignment="CENTER" prefHeight="18.0" prefWidth="504.0" text="or By ISBN number"
                       textAlignment="CENTER" textFill="#7b7b7b"/>
                <HBox prefHeight="26.0" prefWidth="496.0">
                    <children>
                        <TextField fx:id="bookISBN" prefHeight="26.0" prefWidth="420.0" promptText="ISBN number">
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </TextField>
                        <Region prefHeight="10.0" prefWidth="10.0" HBox.hgrow="ALWAYS"/>
                        <Button mnemonicParsing="false" onAction="#findBook" text="Find" textAlignment="RIGHT"
                                textFill="WHITE">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <Label fx:id="errorMessage" prefHeight="18.0" prefWidth="509.0" textFill="RED"/>
                <Label text="Borrowed date" textFill="#7b7b7b"/>
                <DatePicker fx:id="dateBorrowed" prefHeight="26.0" prefWidth="493.0"/>
                <Label text="Due date" textFill="#7b7b7b"/>
                <DatePicker fx:id="dueDate" prefHeight="26.0" prefWidth="493.0"/>
                <Label prefHeight="28.0" prefWidth="460.0"/>
                <HBox alignment="BOTTOM_RIGHT" prefHeight="27.0" prefWidth="456.0" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#updateCheckoutEntity" text="Create"/>
                        <Button id="button-warning" mnemonicParsing="false" onAction="#navigateToViewCheckoutRecords"
                                text="Cancel"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
